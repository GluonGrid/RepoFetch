{
    "name": "repofetch",
    "version": "0.1.1",
    "description": "Fetch and explore remote repository structures and file contents without cloning - built for AI agents",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "repofetch": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node dist/cli.js",
        "prepublishOnly": "npm run build"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "github",
        "gitlab",
        "bitbucket",
        "repository",
        "tree",
        "fetch",
        "cli",
        "ai-agent",
        "file-structure",
        "visualization",
        "remote",
        "content"
    ],
    "author": "GluonGrid",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/GluonGrid/repofetch.git"
    },
    "bugs": {
        "url": "https://github.com/GluonGrid/repofetch/issues"
    },
    "homepage": "https://github.com/GluonGrid/repofetch#readme",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "typescript": "^5.3.0"
    }
}
